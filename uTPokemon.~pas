unit uTPokemon;

interface

uses ExtCtrls, Forms, Sysutils;

type TPokemon = class
protected
  FLevel:Integer;
  FNummer:Integer;
  FXP:Integer;
  FMaxHP: Integer;
  FcurrentHP:Integer;
public
  constructor create (Nummer, Level: Integer);
  procedure setlevel(Level: Integer);
  procedure setXP(XP: Integer);
  procedure setHP(HP:Integer);
  function getLevel:Integer;
  function getNummer:Integer;
  function getXP:Integer;
  function getHP:Integer;
end;

implementation

constructor TPokemon.create (Nummer, Level: Integer);
begin
  FNummer:= Nummer;
  FLevel:= Level;
  FMaxHP:= Level*10; //Formel verbessern
end;

procedure TPokemon.setlevel(Level: Integer);
begin
  if (Level<1) or (Level>100) then FLevel:=FLevel
  else FLevel:= Level;
  FMaxHP:= FLevel*10; //Formel verbessern
end

procedure TPokemon.setXP(XP: Integer);
begin
  if Xp<0 then xp:=0;
//jetzt noch immer nach 100xp Level Up -> muss verbessert werden
  if xp>100 then begin
    TPokemon.SetLevel(FLevel+1);
    xp:= xp-100;
  end;
  FXP:=XP;
end;

function TPokemon.getHP:Integer;
begin

end;

end.
